<%= form_for @post.comments.build do |f| %>

   <strong><%= f.label "Name:" %></strong><br>
   <%= f.text_field :name, required: true %><br><br>

   <%= f.hidden_field :post_id %>
   <strong><%= f.label "Comment:" %></strong><br>
   <%= f.text_area :content, required: true %><br><br>
   <%= f.submit %>
 <% end %>