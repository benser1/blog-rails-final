<h1>Post Title: <%=@post.title%></h1>

<h3><%= @post.title %> </h3>
<p><em><%= last_updated @post %></em></p>
<p> <%= @post.content %> </p>

<%= link_to Category.find_by_id(@post.category_id).name, category_path(Category.find_by_id(@post.category_id))%> - 
<%= link_to "Edit", edit_post_path(@post.id) %> - 
<%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %><br>


<br><h3>Comments:</h3><% @post.comments.each do |comment| %>
  <p>Comment by: <strong><%= comment.name %></strong> </p>
  <p><%= comment.content %></p> <%= button_to "Delete Comment", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>  <em><%= last_updated @post %></em> <br>
  --------------------------------------------------------
<% end %>


